#Number guessing game.
import random

print("Welcome to number guessing game!!")
secret_number = random.randint(1, 20)
print("Guess the random number between 1 to 20.you have 3 chances!")

attempts_left = 5

while attempts_left >0:
    guess = int(input("Guessing number is :"))

    if guess == secret_number:
        print(f"{guess} is a correct number, congratulation.")
        break
    else:
        print("Wroung guess!") 
    
    if attempts_left >1: 
        print("Guess the correct number with the following clues.")  

        #check single or two digits
        if secret_number <10:
            print("clue: Its a single digits number.")
        else:
            print("clue: Its a two digits number.")

        #check even or odd.
        if secret_number%2 == 0:
            print("Clue: Its even.")
        else:
            print("Clue: Its odd.")

    
    attempts_left -= 1

if attempts_left == 0:
    print(f" out of chances! The correct number was {secret_number}.")
   
  

    
 



